<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">


    <TextView
        android:id="@+id/textsesion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:textSize="40dp"
        android:text="Iniciar Sesion"

        android:textColor="#fff" />

    <Button
        android:id="@+id/btnsesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textsesion"
        android:layout_alignStart="@+id/textsesion"
        android:layout_marginTop="17dp"
        android:onClick="onclickiniciosesion"
        android:text="Iniciar sesion"
        android:textSize="40dp"
        android:textColor="#00CC99" />
    <TextView
        android:id="@+id/textoregistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:textSize="30dp"
        android:layout_below="@+id/btnsesion"
        android:text="Â¿No tienes cuenta?
Registrate apretando el boton"
        android:textColor="#fff" />

    <Button
        android:id="@+id/btnregistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textoregistro"
        android:layout_alignStart="@+id/textoregistro"
        android:layout_marginTop="17dp"
        android:onClick="onclickregistro"
        android:text="Registrarse"
        android:textSize="40dp"
        android:textColor="#00CC99" />


</RelativeLayout>